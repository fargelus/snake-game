{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom",
    ],
    "outDir": "./build/",
    "jsx": "react",
    "sourceMap": true,
    "downlevelIteration": true,

    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
